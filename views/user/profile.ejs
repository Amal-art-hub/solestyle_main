<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile | SoleStyle</title>
    <!-- 1. Load Main Styles First -->
    <link rel="stylesheet" href="/css/user/homestyle.css">
    <!-- 2. Load Profile Specific Styles (Overrides) -->
    <link rel="stylesheet" href="/css/user/profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <%- include('../partials/header') %>

        <div class="dashboard-container">
            <h2>My Profile</h2>

            <div class="profile-card">
                <div class="info-row"><span class="label">Name:</span> <span class="value">
                        <%= user.name %>
                    </span></div>
                <div class="info-row"><span class="label">Email:</span> <span class="value">
                        <%= user.email %>
                    </span></div>
                <div class="info-row"><span class="label">Phone:</span> <span class="value">
                        <%= user.phone || 'Not set' %>
                    </span></div>
            
<div class="info-row referral-section">
    <div class="referral-header">
        <span class="label">Refer & Earn</span>
        <span class="referral-badge">Get %20 Off!</span>
    </div>
    
    <div class="referral-content">
        <!-- 1. The Code -->
        <div class="referral-box">
            <span class="referral-label">Your Code:</span>
            <div class="code-display" onclick="copyReferral('code', '<%= user.referralCode %>')">
                <span id="refCode"><%= user.referralCode || 'N/A' %></span>
                <i class="fas fa-copy"></i>
            </div>
        </div>
        <!-- 2. The Link -->
        <div class="referral-box">
            <span class="referral-label">Your Link:</span>
            <% const refLink = `http://localhost:5000/signup?ref=${user.referralCode}`; %>
            <div class="link-display" onclick="copyReferral('link', '<%= refLink %>')">
                <span class="link-text">/signup?ref=<%= user.referralCode %></span>
                <i class="fas fa-link"></i>
                <span class="tooltip">Copy Link</span>
            </div>
        </div>
    </div>
    <p class="referral-hint">Click the code or link to copy directly to your clipboard!</p>
</div>
            </div>
            <div class="actions">
                <button onclick="openModal('editModal')" class="btn-primary">Edit Profile</button>
                <button onclick="openModal('passwordModal')" class="btn-secondary">Change Password</button>
                <button onclick="openModal('couponModal')" class="btn-primary" style="background-color: #27ae60;">
                    <i class="fas fa-gift"></i> My Rewards
                </button>
                <a href="/user/profile/email" class="btn-link">Change Email</a>
            </div>
            <div class="address-section-link">
                <h3>Address Book</h3>
                <p>Manage your shipping and billing addresses.</p>
                <a href="/user/addresses" class="btn-outline">Manage Addresses &rarr;</a>
            </div>
        </div>

        <!-- Edit Profile Modal -->
        <div id="editModal" class="modal-overlay" style="display: none;">
            <div class="modal-content">
                <span class="close-btn" onclick="closeModal('editModal')">&times;</span>
                <h3>Edit Profile</h3>
                <form action="/user/profile/edit" method="POST">
                    <label>Full Name</label><input type="text" name="name" value="<%= user.name %>" required>
                    <label>Phone</label><input type="text" name="phone" value="<%= user.phone %>">
                    <div class="modal-actions">
                        <button type="button" onclick="closeModal('editModal')" class="btn-cancel">Cancel</button>
                        <button type="submit" class="btn-save">Save</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Change Password Modal -->
        <div id="passwordModal" class="modal-overlay" style="display: none;">
            <div class="modal-content">
                <span class="close-btn" onclick="closeModal('passwordModal')">&times;</span>
                <h3>Change Password</h3>
                <form action="/user/profile/password" method="POST" onsubmit="return validatePassword(event)">
                    <label>Current Password</label>
                    <div class="password-wrapper">
                        <input type="password" name="currentPassword" id="currentPass" required>
                        <i class="fas fa-eye password-toggle" id="toggleCurrent"
                            onclick="togglePassword('currentPass', 'toggleCurrent')"></i>
                    </div>

                    <label>New Password</label>
                    <div class="password-wrapper">
                        <input type="password" name="newPassword" id="newPass" required>
                        <i class="fas fa-eye password-toggle" id="toggleNew"
                            onclick="togglePassword('newPass', 'toggleNew')"></i>
                    </div>

                    <label>Confirm Password</label>
                    <div class="password-wrapper">
                        <input type="password" name="confirmPassword" id="confirmPass" required>
                        <i class="fas fa-eye password-toggle" id="toggleConfirm"
                            onclick="togglePassword('confirmPass', 'toggleConfirm')"></i>
                    </div>
                    <div class="modal-actions">
                        <button type="button" onclick="closeModal('passwordModal')" class="btn-cancel">Cancel</button>
                        <button type="submit" class="btn-save">Update</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Coupon Modal -->
        <div id="couponModal" class="modal-overlay" style="display: none;">
            <div class="modal-content" style="max-width: 500px;">
                <span class="close-btn" onclick="closeModal('couponModal')">&times;</span>
                <h3 style="text-align:center; color: #2c3e50;">üéÅ My Rewards</h3>

                <div class="coupon-list" style="margin-top: 20px;">
                    <% if (coupons && coupons.length> 0) { %>
                        <% coupons.forEach(coupon=> { %>
                            <div class="coupon-item"
                                style="background: #f8f9fa; padding: 15px; margin-bottom: 10px; border-left: 5px solid #27ae60; border-radius: 4px;">
                                <div style="font-weight: bold; font-size: 1.1rem; color: #27ae60;">
                                    <%= coupon.code %>
                                </div>
                                <div style="color: #666;">
                                    <%= coupon.description %>
                                </div>
                                <div style="font-size: 0.9rem; margin-top: 5px;">
                                    <strong>
                                        <%= coupon.discount_value %>% OFF
                                    </strong>
                                    (Min Order: ‚Çπ<%= coupon.mincart_value %>)
                                </div>
                                <div style="font-size: 0.8rem; color: #999;">Expires: <%= new
                                        Date(coupon.expiry_date).toLocaleDateString() %>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p style="text-align: center;">You have no rewards yet. Invite friends to earn them!
                                    </p>
                                    <% } %>
                </div>
            </div>
        </div>

        <script src="/js/user/profile.js"></script>
        <%- include('../partials/footer') %>
</body>

</html>