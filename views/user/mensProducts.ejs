<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Men's Collection | SoleStyle</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link rel="stylesheet" href="/css/user/homestyle.css">
    <link rel="stylesheet" href="/css/user/mensProducts.css">
</head>

<body>
    <%- include('../partials/header') %>
        <div class="product-page-container">

            <!-- Sidebar Filters -->
            <aside class="filters-sidebar">
                <form action="/mens-products" method="GET">
                    <input type="hidden" name="category" value="<%= categoryId %>">
                    <input type="hidden" name="search" value="<%= search %>">
                    <input type="hidden" name="sort" value="<%= sort %>">
                    <h3>Filters</h3>

                    <!-- Price Filter -->
                    <div class="filter-group">
                        <h4>Price Range</h4>
                        <input type="number" name="minPrice" placeholder="Min" value="<%= filters.minPrice %>">
                        <input type="number" name="maxPrice" placeholder="Max" value="<%= filters.maxPrice %>">
                    </div>
                    <!-- Brand Filter -->
                    <div class="filter-group">
                        <h4>Brands</h4>
                        <% filterOptions.brands.forEach(brand=> { %>
                            <label>
                                <input type="checkbox" name="brand" value="<%= brand._id %>"
                                    <%=filters.brand===brand._id.toString() ? 'checked' : '' %>>
                                <%= brand.name %>
                            </label>
                            <% }) %>
                    </div>
                    <div class="filter-actions">
                        <button type="submit">Apply</button>
                        <a href="/mens-products?category=<%= categoryId %>">Clear</a>
                    </div>
                </form>
            </aside>
            <!-- Main Content -->
            <main class="product-grid-section">

                <!-- Top Bar: Search & Sort -->
                <div class="top-bar">
                    <form action="/mens-products" method="GET" class="search-form">
                        <input type="hidden" name="category" value="<%= categoryId %>">
                        <input type="text" name="search" placeholder="Search..." value="<%= search %>">
                        <button type="submit">üîç</button>
                    </form>
                    <div class="sort-box">
                        <label>Sort By:</label>
                        <select onchange="location = this.value;">
                            <!-- Helper to build URL with current params + new sort -->
                            <% const buildUrl=(s)=> `?category=${categoryId}&search=${search}&sort=${s}`; %>

                                <option value="<%= buildUrl('newest') %>" <%=sort==='newest' ? 'selected' : '' %>>Newest
                                </option>
                                <option value="<%= buildUrl('price-low') %>" <%=sort==='price-low' ? 'selected' : '' %>
                                    >Price: Low to High</option>
                                <option value="<%= buildUrl('price-high') %>" <%=sort==='price-high' ? 'selected' : ''
                                    %>>Price: High to Low</option>
                                <option value="<%= buildUrl('a-z') %>" <%=sort==='a-z' ? 'selected' : '' %>>Name: A-Z
                                </option>
                                <option value="<%= buildUrl('z-a') %>" <%=sort==='z-a' ? 'selected' : '' %>>Name: Z-A
                                </option>
                        </select>
                    </div>
                </div>
                <!-- Products Grid -->
                <div class="products-grid">
                    <% products.forEach(p=> { %>
                        <!-- <div class="product-card">
                            <a href="/product/<%= p._id %>">
                                <img src="/uploads/variant-images/<%= p.image %>" alt="<%= p.name %>">
                                <div class="info">
                                    <h3>
                                        <%= p.name %>
                                    </h3>
                                    <p class="brand">
                                        <%= p.brandId.name %>
                                    </p>
                                    <p class="price">‚Çπ<%= p.price.toLocaleString() %>
                                    </p>
                                </div>
                            </a>
                                <button class="wishlist-btn" onclick="addToWishlist('<%= p._id %>', '<%= p.variantId %>')">
        <i class="fas fa-heart"></i>
    </button>
                            
                        </div> -->

                        <div class="product-card">
    <a href="/product/<%= p._id %>">
        
        <!-- NEW: Image Badge -->
        <div class="image-wrapper" style="position: relative;">
            <img src="/uploads/variant-images/<%= p.image %>" alt="<%= p.name %>">
            <% if (p.discount > 0) { %>
                <span style="
                    position: absolute;
                    top: 10px;
                    left: 10px;
                    background: #27ae60;
                    color: white;
                    padding: 4px 8px;
                    border-radius: 4px;
                    font-size: 0.8rem;
                    font-weight: bold;
                ">
                    <%= p.discount %>% OFF
                </span>
            <% } %>
        </div>
        <div class="info">
            <h3><%= p.name %></h3>
            <p class="brand"><%= p.brandId.name %></p>
            
            <!-- NEW: Price Logic -->
            <div class="price-container">
                <% if (p.discount > 0) { %>
                    <!-- Discounted State -->
                    <span class="price" style="color: #d9534f; font-weight: bold;">
                        ‚Çπ<%= p.price.toLocaleString() %>
                    </span>
                    <span class="original-price" style="text-decoration: line-through; color: #888; font-size: 0.9em; margin-left: 5px;">
                        ‚Çπ<%= p.originalPrice.toLocaleString() %>
                    </span>
                <% } else { %>
                    <!-- Normal State -->
                    <span class="price">‚Çπ<%= p.price.toLocaleString() %></span>
                <% } %>
            </div>
        </div>
    </a>
    <!-- ... Wishlist Button ... -->
</div>

                        <% }) %>
                </div>
                <!-- Pagination -->
                <div class="pagination">
                    <% for(let i=1; i<=totalPages; i++) { %>
                        <a href="?category=<%= categoryId %>&page=<%= i %>&search=<%= search %>&sort=<%= sort %>"
                            class="<%= currentPage == i ? 'active' : '' %>">
                            <%= i %>
                        </a>
                        <% } %>
                </div>
            </main>
        </div>
        <%- include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script>
    async function addToWishlist(productId, variantId) {
        try {
            if (!productId || !variantId) {
                return Swal.fire('Error', 'Product info missing', 'error');
            }
            const response = await axios.post('/user/wishlist/add', {
                productId, variantId
            });
            
            if (response.data.success) {
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'success',
                    title: 'Added to Wishlist',
                    showConfirmButton: false,
                    timer: 3000
                });
            } else {
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'info',
                    title: response.data.message, // e.g., "Already in wishlist"
                    showConfirmButton: false,
                    timer: 3000
                });
            }
        } catch (error) {
            if (error.response && error.response.status === 401) {
                window.location.href = '/login'; // Redirect if not logged in
            } else {
                console.error(error);
                Swal.fire('Error', 'Something went wrong', 'error');
            }
        }
    }
</script>
</body>

</html>