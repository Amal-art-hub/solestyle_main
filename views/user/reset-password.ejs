

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/user/homestyle.css">
    <link rel="stylesheet" href="/css/user/reset-password.css">
</head>

<body>

    <%- include('../partials/header') %>
<div class="reset-page">

    <div class="reset-container">
        <h2>Set a New Password</h2>
        <p>Your new password must meet the requirements below.</p>

        <form id="resetForm">
            <!-- New Password -->
            <div class="input-group">
                <label>New Password</label>
                <div class="input-box">
                    <input type="password" id="newPassword" placeholder="Enter new password" />
                    <span class="toggle" id="toggleNew"><i class="fa fa-eye"></i></span>
                </div>
            </div>

            <!-- Confirm Password -->
            <div class="input-group">
                <label>Confirm New Password</label>
                <div class="input-box">
                    <input type="password" id="confirmPassword" placeholder="Confirm new password" />
                    <span class="toggle" id="toggleConfirm"><i class="fa fa-eye"></i></span>
                </div>
            </div>

            <!-- Requirements -->
            <div class="requirements">
                <label><input type="checkbox" id="lenCheck" disabled> At least 8 characters</label>
                <label><input type="checkbox" id="numCheck" disabled> Contains a number</label>
                <label><input type="checkbox" id="upperCheck" disabled> Includes an uppercase letter</label>
            </div>

            <button type="submit" class="save-btn">Save New Password</button>
        </form>

        <a href="/login" class="back-login">
            ‚Üê Back to Login
        </a>
    </div>

</div>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/user/reset-password.js"></script>

</body>
</html>

